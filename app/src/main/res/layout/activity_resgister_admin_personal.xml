<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterAdminActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:layout_marginRight="5px"
        android:fontFamily="sans-serif-black"
        android:text="REGISTRO DE PERSONAL ADMINISTRATIVO"
        android:textColor="#4CAF50"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"
        android:layout_marginRight="20px"
        android:text="INGRESE LOS DATOS SOLICITADOS:"
        android:textColor="#99E110"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtNombresAdmin"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtApellidosAdmin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtDirecAdmin"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Dirección"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtmailAdmin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtTelefonoAdmin"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Celular"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtFechaAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Fecha de Nacimiento"
        android:inputType="date" />

    <RadioGroup
        android:id="@+id/rgGeneroAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px">

        <RadioButton
            android:id="@+id/rbMasculinoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/rbFemeninoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Femenino" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtDNIAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="DNI"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtContraAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:layout_marginRight="40px"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="number"
        android:password="false" />

    <Button
        android:id="@+id/btnSaveAdmin"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="GUARDAR REGISTRO" />
</LinearLayout>